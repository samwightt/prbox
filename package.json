{
  "name": "prbox",
  "version": "0.1.2",
  "description": "A terminal UI for triaging GitHub notifications",
  "license": "MIT",
  "type": "module",
  "bin": {
    "prbox": "./dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "start": "bun src/cli.tsx",
    "build": "bun build ./src/cli.tsx --outfile dist/cli.js --target node",
    "lint": "oxlint src/ --react-plugin",
    "lint:fix": "oxlint src/ --react-plugin --fix",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && changeset publish"
  },
  "keywords": [
    "github",
    "notifications",
    "cli",
    "terminal",
    "tui",
    "inbox",
    "triage"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/react": "^19.2.7",
    "oxlint": "^1.31.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.11.0",
    "date-fns": "^4.1.0",
    "execa": "^9.6.1",
    "fullscreen-ink": "^0.1.0",
    "ink": "^6.5.1",
    "react": "^19.2.0",
    "react-devtools-core": "^7.0.1",
    "react-redux": "^9.2.0"
  }
}
